{
    "fields": {
        "field1": {
            "renderer": "text",
            "defaultValue": "test read-only value",
            "isReadOnly": true
        },
        "field2": {
            "renderer": "text"
        },
        "field3": {
            "renderer": "text",
            "validators": [
                {
                    "rule": "required",
                    "message": "Field is required"
                },
                {
                    "rule": "maxLength",
                    "value": 5,
                    "message": "Maximum length of field is 5 characters"
                }
            ]
        }, 
        "field4": {
            "renderer": "text",
            "validators": [
                {
                    "rule": "or",
                    "value": [{ "rule": "numbers" }, 
                              { "rule": "empty"}],
                    "message": "Only numbers allowed"
                }
            ]
        }, 
        "field5": {
            "renderer": "text",
            "validators": [
                {
                    "rule": "and",
                    "value": [{ 
                        "rule": "minLength",
                        "value": 3
                    }, { 
                        "rule": "maxLength",
                        "value": 5
                    }],
                    "message": "Field's length should be between 3 and 5"
                }
            ]
        }, 
        "field6": {
            "renderer": "textarea",
            "isReadOnly": true
        },
        "field7": {
            "renderer": "textarea",
            "validators": [
                {
                    "rule": "and",
