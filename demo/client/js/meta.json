{
    "fields": {
        "field1": {
            "renderer": "text",
            "defaultValue": "default value for text field",
            "isDisabled": true
        },
        "field2": {
            "renderer": "text"
        },
        "validation-field-1": {
            "renderer": "text",
            "validators": [
                {
                    "rule": "required",
                    "message": "Field is required"
                },
                {
                    "rule": "maxLength",
                    "value": 5,
                    "message": "Maximum length of field is 5 characters"
                }
            ]
        }, 
        "validation-field-2": {
            "renderer": "text",
            "validators": [
                {
                    "rule": "or",
                    "value": [{ "rule": "numbers" }, 
                              { "rule": "empty"}],
                    "message": "Only numbers allowed"
                }
            ]
        }, 
        "validation-field-3": {
            "renderer": "text",
            "validators": [
                {
                    "rule": "and",
                    "value": [{ 
                        "rule": "minLength",
                        "value": 3
                    }, { 
                        "rule": "maxLength",
                        "value": 5
                    }],
                    "message": "Field's length should be between 3 and 5"
                }
            ]
        }, 
        "validation-field-4": {
            "renderer": "text",
            "validators": [{
                "rule": "or",
                "value": [{
                    "rule": "and",
                    "value": [{
                        "rule": "alphabetics"
                    }, {
                        "rule": "length",
                        "value": 3
                    }]
                }, {
                    "rule": "and",
                    "value": [{
                        "rule": "numbers"
                    }, {
                        "rule": "length",
                        "value": 9
                    }]
                }],
                "message": "Only 3-characters CODE or 9-characters ID allowed"
            }]
        }, 
        "field6": {
            "renderer": "textarea",
            "isDisabled": true,
            "defaultValue": "default value for textarea field",
            "rendererSpecific": {
                "cols": 50,
                "rows": 5
            }
        },
        "field7": {
            "renderer": "textarea",
            "rendererSpecific": {
                "cols": 50,
                "rows": 5
            },
            "validators": [
                {
                    "rule": "and",
                    "value": [{ 
                        "rule": "minLength",
                        "value": 3
                    }, { 
                        "rule": "maxLength",
                        "value": 5
                    }],
                    "message": "Field's length should be between 3 and 5"
                }
            ]
        }, 
        "field8": {
            "renderer": "checkbox",
            "isDisabled": false,
            "defaultValue": 1,
            "rendererSpecific": {
                "truthMap": {
                    "true":  1,
                    "false": 0
                }
            }
        }, 
        "field9": {
            "renderer": "radiogroup",
            "isDisabled": false,
            "defaultValue": "second",
            "rendererSpecific": {
                "possibleValues": [
                    { "id": "first", "text": "First option", "name": "fst" },
                    { "id": "second", "text": "Second option", "name": "snd" }
                ]
            }
        },
        "select-field": {
            "renderer": "select",
            "isDisabled": false,
            "defaultValue": "second",
            "rendererSpecific": {
                "possibleValues": [
                    { "id": "first", "text": "First option" },
                    { "id": "second", "text": "Second option" },
                    { "id": "third", "text": "Third option" }
                ]
            }
        },
        "select-field-disabled": {
            "renderer": "select",
            "isDisabled": true,
            "defaultValue": "second",
            "rendererSpecific": {
                "possibleValues": [
                    { "id": "first", "text": "First option" },
                    { "id": "second", "text": "Second option" },
                    { "id": "third", "text": "Third option" }
                ]
            }
        },
        "btnSave": {
            "renderer": "button",
            "rendererSpecific": {
                "text": "Save"
            }
        },
        "btnClear": {
            "renderer": "button",
            "rendererSpecific": {
                "text": "Clear"
            }
        }
    },
